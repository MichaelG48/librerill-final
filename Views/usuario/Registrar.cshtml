@model DgBooks.Models.newUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <link href="../css/Registro.css" rel="stylesheet" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro de usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="login-box">
            <h1>Registro</h1>
            <br />
            <form>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <!-- nombre persona -->
                <label for="nombre">Nombre</label>
                @Html.EditorFor(model => model.strNombrePersona, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                @Html.ValidationMessageFor(model => model.strNombrePersona, "", new { @class = "text-danger" })

                <!-- apellido p-->
                <label for="apellidoP">Apellido paterno</label>
                @Html.EditorFor(model => model.strApellidoP, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                @Html.ValidationMessageFor(model => model.strApellidoP, "", new { @class = "text-danger" })

                <!-- apellido m-->
                <label for="apellidoM">Apellido materno</label>
                @Html.EditorFor(model => model.strApellidoM, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                @Html.ValidationMessageFor(model => model.strApellidoM, "", new { @class = "text-danger" })

                <!-- fecha n-->
                <label for="fecha">Fecha de nacimiento</label>
                @Html.EditorFor(model => model.dtFechaNacimiento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.dtFechaNacimiento, "", new { @class = "text-danger" })

                <!-- nombre u-->
                <label for="nombreU">Nombre de usuario</label>
                @Html.EditorFor(model => model.strNombreUsuario, new { htmlAttributes = new { @class = "form-control", @type = "text", @minlength = "5" } })
                @Html.ValidationMessageFor(model => model.strNombreUsuario, "", new { @class = "text-danger" })

                <!-- correo-->
                <label for="correo">Email</label>
                @Html.EditorFor(model => model.strCorreo, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                @Html.ValidationMessageFor(model => model.strCorreo, "", new { @class = "text-danger" })

                <!-- contraseña-->
                <label for="password">Contraseña</label>
                @Html.EditorFor(model => model.strContraseña, new { htmlAttributes = new { @class = "form-control", @type = "password", @pattern = ".{6,}" } })
               
                @Html.ValidationMessageFor(model => model.strContraseña, "", new { @class = "text-danger" })

                <!-- conf contra-->
                <label for="password">Confirmar Contraseña</label>
                @Html.EditorFor(model => model.strConfirmContraseña, new { htmlAttributes = new { @class = "form-control", @type = "password", @pattern = ".{6,}" } })
                @Html.ValidationMessageFor(model => model.strConfirmContraseña, "", new { @class = "text-danger" })

                <br />
                <!-- boton-->
                <input type="submit" ID="btnRegistrar" value="Registrar" class="buttons" />
            </form>

            <a>@Html.ActionLink("Regresar", "Login", "Usuario")</a>
        </div>

    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</body>
</html>